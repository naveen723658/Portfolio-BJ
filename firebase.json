{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules",
    "cors": [
      {
        "origin": ["http://localhost:3000", "https://bgupta.vercel.app"],
        "method": ["GET"],
        "responseHeader": ["Content-Type"],
        "maxAgeSeconds": 3600
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "host": "localhost",
      "port": "3000"
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
